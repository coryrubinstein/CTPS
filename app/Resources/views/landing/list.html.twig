{% extends 'base.html.twig' %}

{% block title %} Issues {% endblock %}

{% block stylesheets %}


    <style>
        body{
            background-color: beige;
        }

        li {
            font-family: "Lucida Sans Unicode", "Lucida Grande", Verdana, Arial, Helvetica, sans-serif;
        }

        p {
            font-family: "Lucida Sans Unicode", "Lucida Grande", Verdana, Arial, Helvetica, sans-serif;
        }

        h1 {
            font-family: fantasy;
            text-align: center;
            font-weight: bold;
            text-decoration: underline;
        }
        
        ul {
            text-align: center;
        }

        a {
            color: inherit;
            text-decoration: none;
        }
        
        a:hover {
            text-decoration: underline;
            -moz-text-decoration-color: deeppink; /* Code for Firefox */
            text-decoration-color: deeppink;
            -webkit-text-decoration-color: deeppink;
        }


    </style>

{% endblock %}


{% block body %}

    <h1>Issues</h1>

    <ul type="none">
        {% for issue in issue %}

            <br><br><li><a href="{{ path ('issue_show', {
            'id': issue.id
        }) }}">{{ issue.name }}</a>

        </li>
        {% endfor %}
    </ul>

    <br><br>


{% endblock %}